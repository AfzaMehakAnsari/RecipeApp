<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_light</item>
        <item name="colorSecondaryVariant">@color/grey_medium</item>
        <item name="colorOnSecondary">@color/text_secondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/yellow_dark</item>

        <!-- Customize your theme here. -->
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/icon_grey</item>
    </style>
</resources>
